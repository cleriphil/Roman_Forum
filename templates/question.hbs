

{{#if isEditing}}

  <form>
    <label for="question">question</label>
    {{input id="question" class="form-control" value=question}}

    <label for="description">Description</label>
    {{textarea id="description" class="form-control" value=description}}

    <label for="author">author</label>
    {{input id="author" class="form-control" value=author}}
  <br>

      <button class="btn btn-primary" {{action 'save'}}>Save Changes</button>
  </form>
{{else}}
  <div class="question-answer-box">
    <h3>Question: {{question}}</h3>
    <h4>{{description}}</h4>
    <h4>Asked by {{author}}</h4>
    <div class="alter-buttons">

      <button class="btn btn-default"{{action 'edit'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
      <button class="btn btn-default" {{action 'delete'}}><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
    </div>

  </div>
  <div class="question-answer-box">


    <h4>Answers:</h4>
      <ul>
        {{#each answers}}
          <li>{{author}} said, {{#link-to 'answer' this.id}}"{{answer}}" {{/link-to}}</li>
        {{/each}}
      </ul>



    <p>{{#link-to 'new-answer' this.id classNames="btn btn-default"}}Add Answer{{/link-to}}</p>
    {{outlet}}
  </div>

{{/if}}
